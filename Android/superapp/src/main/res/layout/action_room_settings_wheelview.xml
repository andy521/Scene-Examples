<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_room_setting_sheet_height"
    android:orientation="vertical"
    android:background="@drawable/round_top_corner_white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_text_item_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin">
        <View
            android:id="@+id/live_room_setting_back"
            android:layout_width="@dimen/live_room_action_arrow_size"
            android:layout_height="@dimen/live_room_action_arrow_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_gray"
            android:visibility="visible"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/live_room_action_sheet_bg_music_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_room_action_sheet_text_item_height"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="@string/live_room_setting_title_resolution"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/gray_darkest"/>

        <TextView
            android:id="@+id/live_room_setting_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/blue_original"
            android:text="@string/cmm_ok"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_action_sheet_item_divider_height"
        android:layout_marginStart="@dimen/live_room_action_sheet_margin"
        android:layout_marginEnd="@dimen/live_room_action_sheet_margin"
        android:background="@color/gray_lightest"/>

    <io.agora.superapp.widget.WheelView
        android:id="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_setting_sheet_height"
        android:paddingStart="@dimen/live_room_action_sheet_margin"
        android:paddingEnd="@dimen/live_room_action_sheet_margin"/>

</LinearLayout>
